<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PagerControlPolyfill.NuGetTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:pagercontrolpolyfill="using:PagerControlPolyfill"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="myButton" Click="myButton_Click">Click Me</Button>
        <pagercontrolpolyfill:PagerControl DisplayMode="Auto" NumberOfPages="10" SelectedPageIndex="2"/>
    </StackPanel>
</Window>
